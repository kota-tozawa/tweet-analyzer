{
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true
      }
    ],
    "yoda": 0,
    "react/no-children-prop": 0,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-unused-vars": 0,
    "no-irregular-whitespace": 1
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "$": false
  },
  "settings": {
    "react": {
      "version": "17.0.1"
    }
  }
}